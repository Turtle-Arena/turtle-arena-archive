<?xml version="1.0" standalone="yes"?>
<install product="turtlearena"
	desc="Turtle Arena"
	version="VERSION"
	update_url="http://ztm.x10hosting.com/ta/updates.txt"
	promptbinaries="yes"
	reinstall="yes"
	nopromptoverwrite="yes"
	nomenuitems="yes"
	postinstall="install-desktop-files.sh"
	preuninstall="preuninstall.sh">
  <readme>
    README
  </readme>

  <component name="Default" version="VERSION" default="yes">
ifelse(HAVE_X86_64,yes,dnl
    <option install="true" arch="x86_64">
     Turtle Arena x86_64 binaries
     <binary libc="any" symlink="turtlearena" icon="turtlearena.png" name="turtlearena">turtlearena</binary>
     <files>
       turtlearena.x86_64.tar
     </files>
     <help>you need the binaries to play the game</help>
    </option>
)dnl
ifelse(HAVE_I386,yes,dnl
    <option install="true" if="|(x86,x86_64)">
     Turtle Arena x86 (32 bit) binaries
     <binary libc="any" symlink="turtlearena" icon="turtlearena.png" name="turtlearena">turtlearena</binary>
     <files>
       turtlearena.i386.tar
     </files>
     <help>you need the binaries to play the game</help>
    </option>
)dnl
ifelse(HAVE_PPC,yes,dnl
    <option install="true" if="|(ppc,ppc64)">
     <binary libc="any" symlink="turtlearena" icon="turtlearena.png" name="turtlearena">turtlearena</binary>
     Turtle Arena ppc binaries
     <files>
       turtlearena.ppc.tar
     </files>
     <help>you need the binaries to play the game</help>
    </option>
)dnl
ifelse(HAVE_PPC64,yes,dnl
    <option install="true" arch="ppc64">
     <binary libc="any" symlink="turtlearena" icon="turtlearena.png" name="turtlearena">turtlearena</binary>
     Turtle Arena ppc64 binaries
     <files>
       turtlearena.ppc64.tar
     </files>
     <help>you need the binaries to play the game</help>
    </option>
)dnl
    <option install="true">
     Music
     <files>
       base/assets2-music.pk3
     </files>
    </option>
    <option install="true">
     Desktop menu entries
     <files mode="0755">
       xdg-desktop-menu
     </files>
     <files>
       turtlearena.desktop.in
     </files>
    </option>

    <option install="true" show="false">
      shared data
      <files>
	base/assets0.pk3
	base/assets1-qvms.pk3
	turtlearena.png
	CODE_LICENSE
	CC-BY-SA-3.0
	COPYRIGHTS
	CREDITS
      </files>
    </option>
  </component>
</install>
